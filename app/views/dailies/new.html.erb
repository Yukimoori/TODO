<h1 class="text-center text-white">daily Detail</h1>
  <%= form_for @daily do |f| %>
    <div class="form-group">
      <%= f.label :日付, class: "text-white" %>
      <%= f.date_field :date %>
    </div>

    <div class="form-group">
      <%= f.label :企業名, class: "text-white" %>
      <%= f.text_area :companyName, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :場所, class: "text-white" %>
      <%= f.label :客先 %>
      <%= f.radio_button :place, :customer %>
      <%= f.label :来客 %>
      <%= f.radio_button :place, :guest %>
    </div>

    <div class="form-group">
      <%= f.label :状況, class: "text-white" %>
      <%= f.label :提案中 %>
      <%= f.radio_button :status, :proposal %>
      <%= f.label :受注 %>
      <%= f.radio_button :status, :ordered %>
    </div>

    <div class="form-group">
      <%= f.label :見込み, class: "text-white" %><br />
      <%= f.label :A %>
      <%= f.radio_button :expectation, :a %>
      <%= f.label :B %>
      <%= f.radio_button :expectation, :b %>
      <%= f.label :C %>
      <%= f.radio_button :expectation, :c %>
      <%= f.label :D %>
      <%= f.radio_button :expectation, :d %>
    </div>

    <div class="form-group">
      <%= f.label :コメント, class: "text-white" %>
      <%= f.text_area :comment, class: "form-control" %>
    </div>

    <%= f.submit "登録", class: "btn-block btn-white" %>
    <% end %>
    <%= button_to '一覧', dailies_path,method: :get %>
